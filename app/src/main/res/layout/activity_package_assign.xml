<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/AppTheme.NoActionBar">


    <TextView
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="46dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:background="@color/design_default_color_primary_dark"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="     Driver's Package"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/package_list"
        android:layout_width="410dp"
        android:layout_height="449dp"
        android:layout_below="@+id/package_list2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="-1dp"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="-97dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"

        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/package_list2"
        android:layout_width="411dp"
        android:layout_height="100dp"
        android:layout_below="@+id/editText"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="-6dp"
        android:layout_marginLeft="-6dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        tools:listitem="@layout/recycler_view_item"
        android:visibility="invisible"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/package_email_list"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_alignTop="@+id/package_list"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="-4dp"
        android:layout_marginLeft="-4dp"
        android:layout_marginTop="342dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        tools:listitem="@layout/recycler_view_item"
        android:visibility="invisible" />

    <Button
        android:id="@+id/start_package2"
        android:layout_width="386dp"
        android:layout_height="59dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="1dp"
        android:text="Start package" />

