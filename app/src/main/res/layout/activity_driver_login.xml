<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nexeyotest.respectcab.DriverLoginActivity"
    android:orientation="vertical">

    <EditText
        android:id="@+id/search_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="38dp"
        android:hint="Phone Number/Driver ID Number"
        android:layout_alignParentLeft="true"
        android:inputType= "number"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_field"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="29dp"
        android:hint="email"/>

    <EditText
        android:id="@+id/driver_id_login"
        android:layout_width="197dp"
        android:layout_height="68dp"
        android:layout_below="@+id/email"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="403dp"
        android:layout_marginLeft="403dp"
        android:layout_marginTop="10dp"
        android:hint="Driver Id" />


    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/search_field"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="8dp"
        android:hint="password"/>

    <Button
        android:id="@+id/registration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="-12dp"
        android:layout_marginLeft="-12dp"
        android:layout_marginTop="17dp"
        android:text="REGISTRATION"
        android:visibility="invisible"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/result_list"
        android:layout_width="601dp"
        android:layout_height="236dp"
        android:layout_below="@+id/password"
        android:layout_alignStart="@+id/email"
        android:layout_alignLeft="@+id/email"
        android:layout_marginStart="-11dp"
        android:layout_marginLeft="-11dp"
        android:layout_marginTop="162dp">

    </android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/search_btn"
        android:layout_width="578dp"
        android:layout_height="67dp"
        android:layout_below="@+id/result_list"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="-154dp"
        android:text="Next" />

    <Button
        android:id="@+id/bck_btn"
        android:layout_width="578dp"
        android:layout_height="67dp"
        android:layout_below="@+id/result_list"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="-69dp"
        android:text="Back" />

    <Button
        android:id="@+id/login"
        android:layout_width="578dp"
        android:layout_height="67dp"
        android:layout_below="@+id/password"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="245dp"
        android:text="LOGIN" />

    <EditText
        android:id="@+id/driver_name"
        android:layout_width="163dp"
        android:layout_height="63dp"
        android:layout_below="@+id/email"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:visibility="invisible"/>

    <EditText
        android:id="@+id/driver_mobile_no"
        android:layout_width="171dp"
        android:layout_height="63dp"
        android:layout_below="@+id/email"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="232dp"
        android:layout_marginRight="232dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:visibility="invisible"/>

    <EditText
        android:id="@+id/driver_full_name"
        android:layout_width="171dp"
        android:layout_height="63dp"
        android:layout_below="@+id/email"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="232dp"
        android:layout_marginRight="232dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

</RelativeLayout>